.anchor
  position fixed
  top 5.2rem
  right 55px
  color #666
  background-color #fff
  width 146px

.show-anchor.theme-default-content:not(.custom)
  margin-left "calc((100% - %s - 5rem - 146px) / 2)" % ($contentWidth)

@media (max-width 1440px)
  .anchor
    right 45px
    width 110px
  .show-anchor.theme-default-content:not(.custom)
    margin-left "calc((100% - %s - 5rem - 110px) / 2)" % ($contentWidth)

@media (max-width 1279px)
  .anchor
    display none
  .show-anchor.theme-default-content:not(.custom)
    margin-left auto

